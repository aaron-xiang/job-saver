{
  "manifest_version": 3,
  "name": "Job Saver",
  "version": "1.0",
  "description": "Save job listings for future reference during your job hunt.",
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}